{% extends 'base-back.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>CategoryId</th>
                <th>CategoryName</th>
                <th>Discription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.categoryId }}</td>
                <td>{{ category.categoryName }}</td>
                <td>{{ category.discription }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'categoryId': category.categoryId}) }}">show</a>
                    <a href="{{ path('app_category_edit', {'categoryId': category.categoryId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Create new</a>
{% endblock %}
